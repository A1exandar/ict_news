<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reader.ictnews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >       
        <activity
            android:name=".StartON"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ITNewsHardwareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsHardwareActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ITNewsSoftwareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsSoftwareActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ITNewsMobileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsMobileActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ITNewsBusinessActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsBusinessActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".ITNewsSecurityActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsSecurityActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ITNewsWebActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.reader.ictnews.ITNewsWebActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
